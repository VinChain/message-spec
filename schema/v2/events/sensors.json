        "units"
      ]
    },
    {
      "title": "Timing Advance",
      "type": "object",
      "properties": {
        "name": {
          "const": "timing advance"
        },
        "value": {
          "type": "number"
        },
        "units": {
          "const": "°"
        }
      },
      "required": [
        "name",
        "value",
        "units"
      ]
    },
    {
      "title": "Mass Air Flow",
      "type": "object",
      "properties": {
        "name": {
          "const": "maf"
        },
        "value": {
          "type": "number"
