    },
    {
      "title": "Fuel Injection Timing",
      "type": "object",
      "properties": {
        "name": {
          "const": "fuel injection timing"
        },
        "value": {
          "type": "number"
        },
        "units": {
          "const": "°"
        }
      },
      "required": [
        "name",
        "value",
        "units"
      ]
    }
  ]
}