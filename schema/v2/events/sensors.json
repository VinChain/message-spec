        "units"
      ]
    },
    {
      "title": "Throttle Position",
      "type": "object",
      "properties": {
        "name": {
          "const": "Throttle Position"
        },
        "value": {
          "type": "number"
        },
        "units": {
          "const": "%",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": [
        "name",
        "value",
        "units"
      ]
    },
    {
      "title": "Fuel Rail Pressure",
      "type": "object",
      "properties": {
        "name": {
          "const": "fuel reail pressure"
        },
        "subtype": {
          "enum": [
            "relative",
            "direct",
            "absolute"
          ]
        },
        "value": {
          "type": "number"
        },
        "units": {
          "const": "kPa"
